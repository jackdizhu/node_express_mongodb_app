  <body>

    <div class="indexPage content menuCon">
        <div class="tit">
            欢迎 <%= username %> 会员.
        </div>
        <div class="linkBox">
          <ul>
              <% for(var i=0;i<links.length;i++){ %>
              <li data-type="<%= links[i].type %>" data-href="<%= links[i].url %>" data-img="<%= links[i].icon %>" data-name="<%= links[i].name %>">
